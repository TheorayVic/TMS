<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:minHeight">52dp</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AnimBottom" parent="@android:style/Animation">  
               <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>  
               <item name="android:windowExitAnimation">@anim/push_buttom_out</item>  
           </style>  
      
       <style name="MyDialogStyleBottom" parent="AppTheme">  
           <item name="android:windowAnimationStyle">@style/AnimBottom</item>  
           <item name="android:windowFrame">@null</item>  
    <!-- 边框 -->  
         <!--   <item name="android:windowIsFloating">true</item> -->  
    <!-- 是否浮现在activity之上 -->  
     <!-- 半透明 -->  
           <item name="android:windowIsTranslucent">true</item>  
     <!-- 无标题 -->  
           <item name="android:windowNoTitle">true</item>  
    <!-- 背景透明 -->  
           <item name="android:windowBackground">@android:color/transparent</item>  
    <!-- 是否允许对话框的背景变暗 -->  
           <item name="android:backgroundDimEnabled">true</item>  
       </style>  


    <!--星星评分图片自定义取代系统图片-->
    <style name="roomRatingBar" parent="@android:style/Widget.RatingBar">

        <item name="android:progressDrawable">@drawable/yhpj_star</item>

        <item name="android:minHeight">58dip</item>

        <item name="android:maxHeight">58dip</item>

    </style>
</resources>