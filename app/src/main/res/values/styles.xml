<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>


    <style name="item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">50dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingRight">50dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:minHeight">52dp</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


     <style name="AnimBottom" parent="@android:style/Animation">  
           <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>  
           <item name="android:windowExitAnimation">@anim/push_buttom_out</item>  
       </style>  
      
       <style name="MyDialogStyleBottom" parent="AppTheme">  
           <item name="android:windowAnimationStyle">@style/AnimBottom</item>  
           <item name="android:windowFrame">@null</item>  
    <!-- 边框 -->  
         <!--   <item name="android:windowIsFloating">true</item> -->  
    <!-- 是否浮现在activity之上 -->  
     <!-- 半透明 -->  
           <item name="android:windowIsTranslucent">true</item>  
     <!-- 无标题 -->  
           <item name="android:windowNoTitle">true</item>  
    <!-- 背景透明 -->  
           <item name="android:windowBackground">@android:color/transparent</item>  
    <!-- 是否允许对话框的背景变暗 -->  
           <item name="android:backgroundDimEnabled">true</item>  
       </style>  

    <!--星星评分图片自定义取代系统图片-->
    <style name="roomRatingBar" parent="@android:style/Widget.RatingBar">

        <item name="android:progressDrawable">@drawable/yhpj_star</item>

        <item name="android:minHeight">58dip</item>

        <item name="android:maxHeight">58dip</item>

    </style>

    <style name="spinner_style">
        <item name="android:background">@drawable/gdtb_spinner</item>
    </style>

    <style name="text_view_title_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">60px</item>
        <item name="android:textColor">#3171AF</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="yellow_button_style">
        <item name="android:layout_marginTop">25px</item>
        <item name="android:layout_width">200px</item>
        <item name="android:layout_height">70px</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:background">#FF9900</item>
    </style>
</resources>
