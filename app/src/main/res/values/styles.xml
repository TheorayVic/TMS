<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="editTextStyle">@style/EditTextStyle</item>
        <item name="android:editTextStyle">@style/EditTextStyle</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edit_bg</item>
    </style>
    <style name="loading_small" parent="@android:style/Widget.ProgressBar.Small">
        <item name="android:indeterminateDrawable">@drawable/loading</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">50dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingRight">50dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:minHeight">52dp</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>


     

    <style name="AnimBottom" parent="@android:style/Animation">  
               <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>  
               <item name="android:windowExitAnimation">@anim/push_buttom_out</item>  
           
    </style>
      
      
       

    <style name="MyDialogStyleBottom" parent="AppTheme">  
               <item name="android:windowAnimationStyle">@style/AnimBottom</item>  
               <item name="android:windowFrame">@null</item>  
        <!-- 边框 -->  
             <!--   <item name="android:windowIsFloating">true</item> -->  
        <!-- 是否浮现在activity之上 -->  
         <!-- 半透明 -->  
               <item name="android:windowIsTranslucent">true</item>  
         <!-- 无标题 -->  
               <item name="android:windowNoTitle">true</item>  
        <!-- 背景透明 -->  
               <item name="android:windowBackground">@android:color/transparent</item>  
        <!-- 是否允许对话框的背景变暗 -->  
               <item name="android:backgroundDimEnabled">true</item>  
           
    </style>
      

    <!--星星评分图片自定义取代系统图片-->
    <style name="roomRatingBar" parent="@android:style/Widget.RatingBar">

        <item name="android:progressDrawable">@drawable/yhpj_star</item>

        <item name="android:minHeight">58dip</item>

        <item name="android:maxHeight">58dip</item>

    </style>

    <style name="spinner_style">
        <item name="android:background">@drawable/gdtb_spinner</item>
    </style>

    <style name="text_view_title_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">60px</item>
        <item name="android:textColor">#3171AF</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="yellow_button_style">
        <item name="android:layout_marginTop">25px</item>
        <item name="android:layout_width">200px</item>
        <item name="android:layout_height">70px</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:background">#FF9900</item>
    </style>

    <style name="base_radio_tab">
        <item name="android:button">@null</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/xxbg_radio</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="radio_group_common">
        <item name="android:layout_width">300px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="common_left_radio_button">
        <item name="android:layout_marginLeft">10px</item>
        <item name="android:layout_width">120px</item>
        <item name="android:layout_height">50px</item>
        <item name="android:background">@drawable/radio_left</item>
        <item name="android:checked">true</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
    </style>

    <style name="common_right_radio_button">
        <item name="android:layout_marginLeft">2px</item>
        <item name="android:layout_width">120px</item>
        <item name="android:layout_height">50px</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/radio_right</item>
        <item name="android:button">@null</item>
    </style>

    <style name="divider_linearlayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:divider">@drawable/divider_line</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:showDividers">middle</item>
    </style>

    <style name="text_view_in_list">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="text_view_in_list.sub">
        <item name="android:minHeight">60dp</item>
    </style>
    <style name="text_view_in_list.noback">
        <item name="android:background">@null</item>
    </style>
</resources>
