<?xml version="1.0" encoding="utf-8"?>
<LinearLayout style="@style/divider_linearlayout"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/linear_bg"
              android:gravity="center_vertical"
              android:minHeight="60dp"
              android:orientation="horizontal">

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="运行维护责任落实情况"
        android:textSize="18sp"/>

    <RadioGroup
        android:id="@+id/rg_jcjg1"
        style="@style/radio_group_common">

        <RadioButton
            android:id="@+id/rb_jcjg_left1"
            style="@style/common_left_radio_button"
            android:text="正常"/>

        <RadioButton
            android:id="@+id/rb_jcjg_right1"
            style="@style/common_right_radio_button"
            android:text="不正常"/>
    </RadioGroup>

    <EditText
        android:id="@+id/et"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:layout_weight="2"/>
</LinearLayout>