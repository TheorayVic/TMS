<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_gdps_add_people"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:background="#EAF1F9"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:background="#008F8F"
            android:gravity="center"
            android:text="人员选择"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:layout_gravity="center"
                android:layout_width="80px"
                android:layout_height="80px"
                android:background="@drawable/gdps_busy"
                android:text="忙"
                android:gravity="center"
                android:textSize="15sp"
                android:textStyle="bold"
                />
            <ListView
                android:id="@+id/listview_psgd_busy"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

            </ListView>
        </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="80px"
                    android:layout_height="80px"
                    android:text="中"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:background="@drawable/gdps_zhong"
                    />
                <ListView
                    android:id="@+id/listview_psgd_zhong"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                </ListView>
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="80px"
                    android:layout_height="80px"
                    android:text="闲"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:background="@drawable/gdps_xian"
                    />
                <ListView
                    android:id="@+id/listview_psgd_xian"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                </ListView>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_psgd_confirm"
            android:layout_width="200px"
            android:layout_height="100px"
            android:text="确定"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="20sp"
            android:background="#3C85CA"
            android:textStyle="bold"/>
    </LinearLayout>
</LinearLayout>
