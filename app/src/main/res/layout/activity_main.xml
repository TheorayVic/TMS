<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EAF1F9"
    tools:context="com.yf.bx.tms.activity.MainActivity">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="400px"
        android:scaleType="fitXY"
        android:src="@drawable/banner_bg1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <com.yf.bx.tms.customview.CustomSizeImg

            android:id="@+id/iv_main_banner1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="200px"
            android:background="@drawable/banner_1">

        </com.yf.bx.tms.customview.CustomSizeImg>
        <!--
        <ImageView
            android:id="@+id/iv_main_banner1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="200px"
            android:scaleType="fitXY"
            android:src="@drawable/banner_1"/>
            -->
        <com.yf.bx.tms.customview.CustomSizeImg
            android:id="@+id/iv_main_banner2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="200px"
            android:background="@drawable/banner_2"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <com.yf.bx.tms.customview.CustomSizeImg
                android:id="@+id/iv_main_banner3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="200px"
                android:background="@drawable/banner_3"/>
            <com.yf.bx.tms.customview.CustomSizeImg
                android:id="@+id/iv_main_banner4"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="200px"
                android:background="@drawable/banner_4"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
   <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10px"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
       <LinearLayout
           android:layout_width="280px"
           android:layout_height="match_parent"
           android:orientation="vertical">
    <ImageView
     android:id="@+id/iv_userphoto"
     android:layout_width="200px"
     android:layout_height="240px"
        android:layout_gravity="right"
        android:scaleType="fitXY"
        android:src="@drawable/avatar"/>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:layout_weight="1"
               android:background="#00A796"
               android:orientation="vertical">
               <TextView
                   android:id="@+id/tv_main_name"
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:layout_weight="1"
                   android:gravity="right"
                   android:layout_marginRight="10px"
                   android:text="王宏伟"
                   android:textSize="18sp"
                   android:textColor="@color/white"/>
               <TextView
                   android:id="@+id/tv_main_gangwei"
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:layout_weight="1"
                   android:gravity="right"
                   android:layout_marginRight="10px"
                   android:text="运维检修"
                   android:textSize="18sp"
                   android:textColor="@color/white"/>
               <TextView
                   android:id="@+id/tv_main_tel"
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:layout_weight="1"
                   android:layout_marginRight="10px"
                   android:gravity="right"
                   android:text="0531-12345678"
                   android:textSize="18sp"
                   android:textColor="@color/white"/>
           </LinearLayout>
       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_marginLeft="20dp"
           android:orientation="vertical">
           <TextView
               android:id="@+id/tv_main_tip"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:background="@drawable/main_tip"
               android:text=" 消 息   0   条     "
               android:textColor="@color/white"
               android:textSize="20sp"
               android:gravity="right|center_vertical"
               />
        <ListView
            android:id="@+id/lv_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@drawable/dash_listview_divier"
            android:dividerHeight="2dp"
            android:layerType="software">
        </ListView>
       </LinearLayout>
    </LinearLayout>

</LinearLayout>
