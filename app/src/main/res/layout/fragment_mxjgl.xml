<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/ksxj_common_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



    <LinearLayout
        android:layout_marginTop="10px"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_mxxgl_jcx5"
            android:layout_width="200px"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:text="光缆紧锁固定点是否牢固"
            android:textColor="@color/black"
            android:gravity="center"
            android:lines="2"/>
        <RadioGroup
            android:id="@+id/rg_mxxgl_jcjg5"
            android:layout_width="300px"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">
            <RadioButton
                android:id="@+id/rb_mxxgl_jcjg_left5"
                android:layout_marginLeft="10px"
                android:layout_width="120px"
                android:layout_height="50px"
                android:background="@drawable/radio_left"
                android:checked="true"
                android:textSize="18sp"
                android:text="正常"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"
                android:button="@null"/>
            <RadioButton
                android:layout_marginLeft="2px"
                android:id="@+id/rb_mxxgl_jcjg_right5"
                android:layout_width="120px"
                android:layout_height="50px"
                android:textSize="18sp"
                android:text="不正常"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/radio_right"
                android:button="@null"/>
        </RadioGroup>
        <EditText
            android:id="@+id/et_mxxgl_y1"
            android:layout_marginLeft="2px"
            android:background="@drawable/tv_bg"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:maxLength="100"
            android:textColor="#3171AF"
            android:gravity="center"/>
        <ImageButton
            android:id="@+id/ib_mxxgl_photo1"
            android:layout_width="200px"
            android:layout_height="match_parent"
            android:background="@color/transfer"
            android:src="@drawable/photo_before"/>
    </LinearLayout>



    <include layout="@layout/ksxj_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>