<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
   <include layout="@layout/xjyw_common_layout"
       android:layout_height="wrap_content"
       android:layout_width="match_parent"/>
    <LinearLayout
        android:layout_marginTop="10px"
        android:layout_width="match_parent"
        android:layout_height="60px"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_horizontal">
    <TextView
        android:layout_marginLeft="10px"
        android:id="@+id/tv_fxwt_jcxm"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:text="检查项目:"
        android:textColor="#3171AF"
        android:layout_gravity="center_vertical"
        android:textSize="18sp"/>
    <Spinner
        android:id="@+id/spi_fxwt_jcxm"
        android:layout_width="250px"
        android:layout_height="match_parent"
        android:background="@drawable/gdtb_spinner"/>
            </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_horizontal">
            <TextView
                android:layout_marginLeft="10px"
                android:id="@+id/tv_fxwt_sfxq"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="是否消缺:"
                android:textColor="#3171AF"
                android:layout_gravity="center_vertical"
                android:textSize="18sp"/>
            <Spinner
                android:id="@+id/spi_fxwt_sfxq"
                android:layout_width="250px"
                android:layout_height="match_parent"
                android:background="@drawable/gdtb_spinner"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_horizontal">
            <TextView
                android:layout_marginLeft="10px"
                android:id="@+id/tv_fxwt_xjlx"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="巡检类型:"
                android:textColor="#3171AF"
                android:layout_gravity="center_vertical"
                android:textSize="18sp"/>
            <Spinner
                android:id="@+id/spi_fxwt_xjlx"
                android:layout_width="250px"
                android:layout_height="match_parent"
                android:background="@drawable/gdtb_spinner"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10px"
        android:gravity="center">
        <TextView
            android:id="@+id/fxwt_search"
            android:layout_marginLeft="20px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:text="查询"
            android:gravity="center"
            android:background="@drawable/gdtb_down_bg"/>
        <TextView
            android:id="@+id/fxwt_reset"
            android:layout_marginLeft="200px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:text="重置"
            android:gravity="center"
            android:background="@drawable/gdtb_down_bg"/>
    </LinearLayout>
    <TextView
        android:layout_marginTop="10px"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/black">
        <TextView
            android:layout_width="1px"
            android:layout_height="match_parent" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.6"
            android:gravity="center"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:text="巡检单位"
            android:background="@drawable/gdtb_down_bg" />
        <TextView
            android:layout_marginLeft="2px"
            android:background="@drawable/gdtb_down_bg"
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:gravity="center"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:text="通信站"/>
        <TextView
            android:layout_marginLeft="2px"
            android:background="@drawable/gdtb_down_bg"
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:gravity="center"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:text="检查时间"/>
        <TextView
            android:layout_marginLeft="2px"
            android:background="@drawable/gdtb_down_bg"
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:gravity="center"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:text="检查负责人"/>
        <TextView
            android:layout_marginLeft="2px"
            android:background="@drawable/gdtb_down_bg"
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:text="检测项目"/>
        <TextView
            android:layout_marginLeft="2px"
            android:background="@drawable/gdtb_down_bg"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:text="异常原因"
            />
        <TextView
        android:layout_marginLeft="2px"
        android:background="@drawable/gdtb_down_bg"
        android:layout_width="0dp"
        android:layout_weight="0.8"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_height="match_parent"
        android:textSize="16sp"
        android:text="是否已消缺"
        />

        <TextView
        android:layout_marginLeft="2px"
        android:background="@drawable/gdtb_down_bg"
            android:layout_width="0dp"
            android:layout_weight="0.9"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_height="match_parent"
        android:textSize="16sp"
        android:text="操作"
       />


        <TextView
            android:layout_width="5px"
            android:layout_height="match_parent"
            android:background="@drawable/gdtb_down_bg"/>
        <TextView
            android:layout_width="2px"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/black"/>
    <ListView
        android:id="@+id/lv_fxwt"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:dividerHeight="2px"
        android:divider="@color/black"></ListView>
</LinearLayout>