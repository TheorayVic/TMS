<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
    android:background="@color/activity_bg">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="8px">

                <TextView
                    style="@style/text_view_title_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="春秋检单位:"/>

                <Spinner
                    android:id="@+id/spi_cqj_xz_cqjdw"
                    style="@style/spinner_style"
                    android:layout_width="420px"
                    android:layout_height="wrap_content"></Spinner>

                <TextView
                    style="@style/text_view_title_style"
                    android:layout_width="160px"
                    android:gravity="right"
                    android:layout_height="wrap_content"
                    android:text="通信站:"/>

                <Spinner
                    android:id="@+id/spi_cqj_xz_txz"
                    style="@style/spinner_style"
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"></Spinner>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="8px">

                <TextView
                    style="@style/text_view_title_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="检查负责人:"/>

                <Spinner
                    android:id="@+id/spi_cqj_xz_jcfzr"
                    style="@style/spinner_style"
                    android:layout_width="420px"
                    android:layout_height="wrap_content"></Spinner>

                <TextView
                    android:id="@+id/textView"
                    android:gravity="right"
                    style="@style/text_view_title_style"
                    android:layout_width="160px"
                    android:layout_height="wrap_content"
                    android:text="检查时间:"/>

                <TextView
                    android:id="@+id/tv_cqj_xz_jcsj"
                    style="@style/spinner_style"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="8px">

                <TextView
                    style="@style/text_view_title_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="工作票编号:"/>

                <Spinner
                    android:id="@+id/spi_cqj_xz_gzpbh"
                    style="@style/spinner_style"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"></Spinner>

            </LinearLayout>

            <TextView
                style="@style/text_view_title_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="抽检项目："/>

            <com.yf.bx.tms.view.ZengjiaJianShaoGridView
                android:id="@+id/grid_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/start"
        style="@style/yellow_button_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5px"
        android:text="春秋检申请"/>
</LinearLayout>