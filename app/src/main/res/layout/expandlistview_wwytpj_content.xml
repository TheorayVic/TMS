            android:gravity="center"
            android:background="@drawable/wwytpj_gdtb"/>
        <TextView
            android:id="@+id/tv_wwytpj_content_gdps"
            android:layout_marginLeft="120px"
            android:layout_width="180px"
            android:layout_height="wrap_content"
            android:text="18"
            android:textSize="30sp"
            android:textColor="#3171AF"
            android:gravity="center"
            android:background="@drawable/wwytpj_gdps"/>
        <TextView
            android:id="@+id/tv_wwytpj_content_gdcl"
            android:layout_marginLeft="120px"
            android:layout_width="180px"
            android:layout_height="wrap_content"
            android:text="18"
            android:textSize="30sp"
            android:textColor="#3171AF"
            android:gravity="center"
            android:background="@drawable/wwytpj_gdcl"/>
        <TextView
            android:id="@+id/tv_wwytpj_content_yhpj"
            android:layout_marginLeft="120px"
            android:layout_width="180px"
            android:layout_height="wrap_content"
            android:text="18"
            android:textColor="#3171AF"
            android:textSize="30sp"
            android:gravity="center"
            android:background="@drawable/wwytpj_yhpj"/>
    </LinearLayout>
</LinearLayout>