            android:layout_height="120px"
            android:text="解决办法:"
            android:textColor="#3171AF"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:textSize="18sp"/>
        <EditText
            android:layout_marginTop="5px"
            android:layout_toRightOf="@id/tv_gdcl_cl_jjbf2"
            android:layout_below="@id/spinner_gdcl_cl_cljg"
            android:id="@+id/tv_gdcl_cl_jjbf"
            android:layout_alignRight="@id/spinner_gdcl_cl_cljg"
