            android:layout_marginTop="5px"
            android:layout_toRightOf="@id/tv_gdcl_cl_jdwtlx2"
            android:layout_below="@id/tv_gdcl_cl_sbms"
            android:id="@+id/spinner_gdcl_cl_jdwtlx"
            android:layout_width="460px"
            android:layout_height="50px"
            android:background="@drawable/gdtb_spinner"/>
