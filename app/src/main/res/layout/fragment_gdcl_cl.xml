            <TextView
                android:layout_marginTop="10px"
                android:id="@+id/tv_gdcl_hxcl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/gdtb_down_bg"
                android:layout_gravity="center_vertical|right"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:text="后续处理"/>

        <TextView
            android:layout_marginTop="10px"
            android:id="@+id/tv_gdcl_cl_savephoto"
            android:layout_marginLeft="5px"
            android:layout_width="match_parent"
            android:layout_height="160px" />
</LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10px"
        android:layout_height="60px"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:gravity="center">
        <LinearLayout
            android:id="@+id/ll_gdcl_cl_photo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@color/bgbottom"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/gdtb_add_photo"/>
            <TextView
                android:layout_marginLeft="20px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:text="拍照"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_gdcl_cl_save"
            android:layout_marginLeft="5px"
            android:background="@color/bgbottom"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/gdtb_add_save"/>
            <TextView
                android:layout_marginLeft="20px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:text="保存"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_gdcl_cl_commit"
            android:layout_marginLeft="5px"
            android:background="@color/bgbottom"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/gdtb_commit"/>
            <TextView
                android:layout_marginLeft="20px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:text="提交"/>
        </LinearLayout>
