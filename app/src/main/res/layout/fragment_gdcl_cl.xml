            android:background="@drawable/tv_bg"/>
        <TextView
            android:layout_marginTop="5px"
            android:id="@+id/tv_gdcl_cl_jjcd2"
            android:layout_below="@id/tv_gdcl_cl_bm"
            android:layout_toRightOf="@id/tv_gdcl_cl_wtfssj"
