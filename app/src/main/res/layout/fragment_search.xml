<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAF1F9">

    <LinearLayout
        android:layout_marginTop="10px"
        android:layout_width="match_parent"
        android:layout_height="70px"
        android:orientation="horizontal"
        android:gravity="center">
    <android.support.v7.widget.SearchView
        android:id="@+id/searchview_xxbg"
        android:background="@drawable/tv_bg"
        android:queryHint="搜索"
        android:layout_width="900px"
        android:layout_height="match_parent">
    </android.support.v7.widget.SearchView>
   <ImageButton
       android:id="@+id/ib_xxbg_search_inner"
       android:src="@drawable/search_button"
       android:scaleType="fitXY"
       android:background="@color/transfer"
       android:layout_width="wrap_content"
       android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:layout_marginTop="10px"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_search_tiaojian1"
            android:layout_marginLeft="100px"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="部门"
            android:background="@drawable/search_before"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/tv_search_tiaojian2"
            android:layout_marginLeft="100px"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="电话"
            android:background="@drawable/search_before"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/tv_search_tiaojian3"
            android:layout_marginLeft="100px"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="联系人"
            android:background="@drawable/search_before"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/tv_search_tiaojian4"
            android:layout_marginLeft="100px"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="问题标题"
            android:background="@drawable/search_before"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="100px"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60px"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60px"
            android:text="本次共查到"
            android:textSize="14sp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tv_gdps_num"
            android:layout_width="wrap_content"
            android:layout_height="60px"
            android:text="  0  "
            android:textSize="14sp"
            android:textColor="@color/red"
            android:gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60px"
            android:text="条"
            android:textSize="14sp"
            android:gravity="center"/>
    </LinearLayout>
    <ListView
        android:id="@+id/listview_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>


</LinearLayout>