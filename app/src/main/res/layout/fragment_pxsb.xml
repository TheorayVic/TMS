<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginTop="10px"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_pxsb_jcxm1"
            android:layout_width="200px"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:text="是否有其他专业新增不规范布线"
            android:textColor="@color/black"
            android:gravity="center"
            android:lines="2"/>
        <RadioGroup
            android:id="@+id/rg_pxsb_jcjg1"
            android:layout_width="300px"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">
            <RadioButton
                android:id="@+id/rb_pxsb_jcjg_left1"
                android:layout_marginLeft="10px"
                android:layout_width="120px"
                android:layout_height="50px"
                android:background="@drawable/radio_left"
                android:checked="true"
                android:textSize="18sp"
                android:text="有"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"
                android:button="@null"/>
            <RadioButton
                android:layout_marginLeft="2px"
                android:id="@+id/rb_pxsb_jcjg_right1"
                android:layout_width="120px"
                android:layout_height="50px"
                android:textSize="18sp"
                android:text="无"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/radio_right"
                android:button="@null"/>
        </RadioGroup>
        <EditText
            android:id="@+id/et_pxsb_y1"
            android:layout_marginLeft="2px"
            android:background="@drawable/tv_bg"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:maxLength="100"
            android:textColor="#3171AF"
            android:gravity="center"/>
        <ImageButton
            android:id="@+id/ib_pxsb_photo1"
            android:layout_width="200px"
            android:layout_height="match_parent"
            android:background="@color/transfer"
            android:src="@drawable/photo_before"/>
    </LinearLayout>
<TextView
    android:layout_width="match_parent"
    android:layout_height="150px" />
    <include layout="@layout/ksxj_bottom_layout"/>
</LinearLayout>