<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAF1F9">
<RelativeLayout
    android:layout_marginLeft="5px"
    android:layout_marginTop="5px"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_marginLeft="75px"
        android:id="@+id/tv_gdtb_add_wtbt2"
        android:layout_width="wrap_content"
        android:layout_height="80px"
        android:text="问题标题:"
        android:maxLength="20"
        android:drawableLeft="@drawable/xingxing"
        android:textColor="#3171AF"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:textSize="18sp"/>
    <TextView
        android:layout_toRightOf="@id/tv_gdtb_add_wtbt2"
        android:id="@+id/tv_gdtb_add_wtbt"
        android:layout_width="450px"
        android:layout_height="80px"
        android:background="@drawable/tv_bg"/>
    <TextView
        android:layout_toRightOf="@id/tv_gdtb_add_wtbt"
        android:layout_marginLeft="10px"
        android:id="@+id/tv_gdtb_add_wtlx2"
        android:layout_width="wrap_content"
        android:layout_height="80px"
        android:gravity="center_vertical"
        android:text="问题类型:"
        android:drawableLeft="@drawable/xingxing"
        android:textColor="#3171AF"
        android:layout_gravity="center_vertical"
        android:textSize="18sp"/>
    <TextView
        android:layout_toRightOf="@id/tv_gdtb_add_wtlx2"
        android:id="@+id/tv_gdtb_add_wtlx"
        android:layout_width="200px"
        android:layout_height="80px"
        android:background="@drawable/tv_bg"/>
    <Spinner
        android:layout_toRightOf="@id/tv_gdtb_add_wtlx"
        android:id="@+id/spinner_gdtb_add_wtlx"
        android:layout_width="wrap_content"
        android:layout_height="80px"
        android:spinnerMode="dropdown"
        android:background="@drawable/gdtb_spinner"
        />
    <TextView
        android:layout_marginTop="15px"
        android:id="@+id/tv_gdtb_add_wtms2"
        android:layout_below="@id/tv_gdtb_add_wtbt2"
        android:layout_alignRight="@id/tv_gdtb_add_wtbt2"
        android:layout_width="wrap_content"
        android:layout_height="80px"
        android:text="问题描述:"
        android:maxLength="100"
        android:drawableLeft="@drawable/xingxing"
        android:textColor="#3171AF"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:textSize="18sp"/>
    <TextView
        android:layout_marginTop="15px"
        android:layout_toRightOf="@id/tv_gdtb_add_wtms2"
        android:layout_below="@id/tv_gdtb_add_wtbt2"
        android:id="@+id/tv_gdtb_add_wtms"
        android:layout_width="wrap_content"
        android:layout_alignRight="@id/spinner_gdtb_add_wtlx"
        android:layout_height="200px"
        android:background="@drawable/tv_bg"/>
    <TextView
        android:layout_marginTop="15px"
        android:id="@+id/tv_gdtb_add_lxr2"
        android:layout_below="@id/tv_gdtb_add_wtms"
        android:layout_alignRight="@id/tv_gdtb_add_wtbt2"
        android:layout_width="wrap_content"
        android:layout_height="80px"
        android:text="联系人:"
        android:drawableLeft="@drawable/xingxing"
        android:textColor="#3171AF"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:textSize="18sp"/>
    <TextView
        android:layout_marginTop="15px"
        android:layout_toRightOf="@id/tv_gdtb_add_lxr2"
        android:layout_below="@id/tv_gdtb_add_wtms"
        android:id="@+id/tv_gdtb_add_lxr"
        android:layout_width="360px"
        android:layout_height="80px"
        android:background="@drawable/tv_bg"/>
    <TextView
        android:layout_marginTop="15px"
        android:id="@+id/tv_gdtb_add_lxdh2"
        android:layout_below="@id/tv_gdtb_add_wtms"
        android:layout_toRightOf="@id/tv_gdtb_add_lxr"
        android:layout_width="wrap_content"
        android:layout_height="80px"
        android:text="联系电话:"
        android:drawableLeft="@drawable/xingxing"
        android:textColor="#3171AF"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:textSize="18sp"/>
    <TextView
        android:layout_marginTop="15px"
        android:layout_toRightOf="@id/tv_gdtb_add_lxdh2"
        android:layout_below="@id/tv_gdtb_add_wtms"
        android:id="@+id/tv_gdtb_add_lxdh"
        android:layout_width="360px"
        android:layout_height="80px"
        android:background="@drawable/tv_bg"/>

    <TextView
        android:layout_marginTop="15px"
        android:id="@+id/tv_gdtb_add_wtfssj2"
        android:layout_below="@id/tv_gdtb_add_lxr"
        android:layout_width="wrap_content"
        android:layout_height="80px"
        android:text="问题发生时间:"
        android:drawableLeft="@drawable/xingxing"
        android:textColor="#3171AF"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:textSize="18sp"/>
    <TextView
        android:layout_marginTop="15px"
        android:layout_toRightOf="@id/tv_gdtb_add_wtfssj2"
        android:layout_below="@id/tv_gdtb_add_lxr"
        android:id="@+id/tv_gdtb_add_wtfssj"
        android:layout_width="360px"
        android:layout_height="80px"
        android:background="@drawable/tv_bg"/>
    <TextView
        android:layout_marginTop="15px"
        android:id="@+id/tv_gdtb_add_fsdd2"
        android:layout_below="@id/tv_gdtb_add_lxr"
        android:layout_toRightOf="@id/tv_gdtb_add_wtfssj"
        android:layout_width="wrap_content"
        android:layout_height="80px"
        android:text="发生地点:"
        android:drawableLeft="@drawable/xingxing"
        android:textColor="#3171AF"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:textSize="18sp"/>
    <TextView
        android:layout_marginTop="15px"
        android:layout_toRightOf="@id/tv_gdtb_add_fsdd2"
        android:layout_below="@id/tv_gdtb_add_lxr"
        android:id="@+id/tv_gdtb_add_fsdd"
        android:layout_width="360px"
        android:layout_height="80px"
        android:background="@drawable/tv_bg"/>


    <TextView
        android:layout_marginTop="15px"
        android:id="@+id/tv_gdtb_add_bm2"
        android:layout_alignRight="@id/tv_gdtb_add_wtfssj2"
        android:layout_below="@id/tv_gdtb_add_wtfssj2"
        android:layout_width="wrap_content"
        android:layout_height="80px"
        android:text="部门:"
        android:drawableLeft="@drawable/xingxing"
        android:textColor="#3171AF"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:textSize="18sp"/>
    <TextView
        android:layout_marginTop="15px"
        android:layout_toRightOf="@id/tv_gdtb_add_wtfssj2"
        android:layout_below="@id/tv_gdtb_add_wtfssj2"
        android:id="@+id/tv_gdtb_add_bm"
        android:layout_width="360px"
        android:layout_height="80px"
        android:background="@drawable/tv_bg"/>
    <TextView
        android:layout_marginTop="15px"
        android:id="@+id/tv_gdtb_add_sbbm2"
        android:layout_below="@id/tv_gdtb_add_wtfssj2"
        android:layout_toRightOf="@id/tv_gdtb_add_wtfssj"
        android:layout_width="wrap_content"
        android:layout_height="80px"
        android:text="设备编码:"
        android:drawableLeft="@drawable/xingxing"
        android:textColor="#3171AF"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:textSize="18sp"/>
    <TextView
        android:layout_marginTop="15px"
        android:layout_toRightOf="@id/tv_gdtb_add_fsdd2"
        android:layout_below="@id/tv_gdtb_add_wtfssj2"
        android:id="@+id/tv_gdtb_add_sbbm"
        android:layout_width="180px"
        android:layout_height="80px"
        android:background="@drawable/tv_bg"/>
    <ImageButton
        android:id="@+id/ib_gdtb_add_zxing"
        android:layout_width="180px"
        android:layout_height="80px"
        android:layout_marginTop="15px"
        android:src="@drawable/zxing_button"
        android:layout_toRightOf="@id/tv_gdtb_add_sbbm"
        android:layout_below="@id/tv_gdtb_add_wtfssj2"
        />
</RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20px">
        <LinearLayout
            android:layout_width="250px"
            android:layout_height="100px"
            android:orientation="horizontal"
            android:layout_marginLeft="350px"
            android:gravity="center"
            android:background="@drawable/gdtb_down_bg">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_photo"/>
            <TextView
                android:layout_marginLeft="20px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:text="拍照"/>
        </LinearLayout>
        <TextView
            android:layout_width="250px"
            android:layout_height="100px"
            android:background="@drawable/gdtb_down_bg"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginLeft="100px"
            android:text="提交"/>
    </LinearLayout>
</LinearLayout>