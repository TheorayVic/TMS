<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       >
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">
    <include layout="@layout/ksxj_common_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_marginTop="10px"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_jfhj_jcxm5"
            android:layout_width="200px"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:text="机房温度"
            android:gravity="center"
            android:lines="2"/>
        <TextView
            android:layout_width="300px"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">
        </TextView>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="horizontal">
        <EditText
            android:id="@+id/et_jfhj_yy5"
            android:layout_marginLeft="2px"
            android:background="@drawable/tv_bg"
            android:layout_width="200px"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:textColor="#3171AF"
            android:gravity="center"/>
            <TextView
                android:layout_marginLeft="7px"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="℃"
                android:textColor="@color/black"
                android:textSize="25sp"/>
        </LinearLayout>
        <ImageButton
            android:id="@+id/ib_jfhj_photo5"
            android:layout_width="200px"
            android:layout_height="match_parent"
            android:background="@color/transfer"
            android:src="@drawable/photo_before"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10px"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_jfhj_jcxm6"
            android:layout_width="200px"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:text="机房空调运行情况"
            android:textColor="@color/black"
            android:gravity="center"
            android:lines="2"/>
        <RadioGroup
            android:id="@+id/rg_jfhj_jcjg6"
            android:layout_width="300px"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">
            <RadioButton
                android:id="@+id/rb_jcjg_jfhj_left6"
                android:layout_marginLeft="10px"
                android:layout_width="120px"
                android:layout_height="50px"
                android:background="@drawable/radio_left"
                android:checked="true"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="正常"
                android:gravity="center"
                android:button="@null"/>
            <RadioButton
                android:layout_marginLeft="2px"
                android:id="@+id/rb_jcjg_jfhj_right6"
                android:layout_width="120px"
                android:layout_height="50px"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"
                android:text="不正常"
                android:background="@drawable/radio_right"
                android:button="@null"/>
        </RadioGroup>
        <EditText
            android:id="@+id/et_jfhj_yy6"
            android:layout_marginLeft="2px"
            android:background="@drawable/tv_bg"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:maxLength="100"
            android:textColor="#3171AF"
            android:gravity="center"/>
        <ImageButton
            android:id="@+id/ib_jfhj_photo6"
            android:layout_width="200px"
            android:layout_height="match_parent"
            android:background="@color/transfer"
            android:src="@drawable/photo_before"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10px"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_jfhj_jcxm7"
            android:layout_width="200px"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:text="机房空调内外机清理"
            android:lines="2"/>
        <RadioGroup
            android:id="@+id/rg_jfhj_jcjg7"
            android:layout_width="300px"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">
            <RadioButton
                android:id="@+id/rb_jcjg_jfhj_left7"
                android:layout_marginLeft="10px"
                android:layout_width="120px"
                android:layout_height="50px"
                android:background="@drawable/radio_left"
                android:checked="true"
                android:textSize="18sp"
                android:text="已清理"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"
                android:button="@null"/>
            <RadioButton
                android:layout_marginLeft="2px"
                android:id="@+id/rb_jcjg_jfhj_right7"
                android:layout_width="120px"
                android:layout_height="50px"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="未清理"
                android:gravity="center"
                android:background="@drawable/radio_right"
                android:button="@null"/>
        </RadioGroup>
        <EditText
            android:id="@+id/et_jfhj_yy7"
            android:layout_marginLeft="2px"
            android:background="@drawable/tv_bg"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:maxLength="100"
            android:textColor="#3171AF"
            android:gravity="center"/>
        <ImageButton
            android:id="@+id/ib_jfhj_photo7"
            android:layout_width="200px"
            android:layout_height="match_parent"
            android:background="@color/transfer"
            android:src="@drawable/photo_before"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10px"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_jfhj_jcxm8"
            android:layout_width="200px"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:text="屏内封堵"
            android:lines="2"/>
        <RadioGroup
            android:id="@+id/rg_jfhj_jcjg8"
            android:layout_width="300px"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">
            <RadioButton
                android:id="@+id/rb_jcjg_jfhj_left8"
                android:layout_marginLeft="10px"
                android:layout_width="120px"
                android:layout_height="50px"
                android:background="@drawable/radio_left"
                android:checked="true"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="封堵"
                android:gravity="center"
                android:button="@null"/>
            <RadioButton
                android:layout_marginLeft="2px"
                android:id="@+id/rb_jcjg_jfhj_right8"
                android:layout_width="120px"
                android:layout_height="50px"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"
                android:text="未封堵"
                android:background="@drawable/radio_right"
                android:button="@null"/>
        </RadioGroup>
        <EditText
            android:id="@+id/et_jfhj_yy8"
            android:layout_marginLeft="2px"
            android:background="@drawable/tv_bg"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:maxLength="100"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:textColor="#3171AF"
            android:gravity="center"/>
        <ImageButton
            android:id="@+id/ib_jfhj_photo8"
            android:layout_width="200px"
            android:layout_height="match_parent"
            android:background="@color/transfer"
            android:src="@drawable/photo_before"/>
    </LinearLayout>

    <include layout="@layout/ksxj_bottom_layout"/>
       </LinearLayout>
   </ScrollView>
</LinearLayout>