<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/tv_main_item_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/main_item"
        android:textColor="@color/white"
        android:text="01"
        android:gravity="center"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/tv_main_item_type"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="信息办公设备工单"
        android:textColor="#4A87C5"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/tv_main_item_date"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2016-10-25"
        android:textColor="@color/gray"
        android:textSize="20sp"
        />
</LinearLayout>
    <TextView
        android:id="@+id/tv_main_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="问题标题"
        android:textSize="20sp"
        android:layout_marginLeft="50px"/>
</LinearLayout>