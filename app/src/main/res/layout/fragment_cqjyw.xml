<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical" android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#EAF1F9">
    <include layout="@layout/xjyw_common_layout"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:orientation="horizontal"
        android:layout_marginTop="10px"
        android:gravity="center">
        <TextView
            android:id="@+id/xjyw_add"
            android:layout_marginLeft="20px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:text="新增"
            android:gravity="center"
            android:background="@drawable/gdtb_down_bg"/>
        <TextView
            android:id="@+id/xjyw_search"
            android:layout_marginLeft="20px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:text="查询"
            android:gravity="center"
            android:background="@drawable/gdtb_down_bg"/>
        <TextView
            android:id="@+id/xjyw_reset"
            android:layout_marginLeft="20px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:text="重置"
            android:gravity="center"
            android:background="@drawable/gdtb_down_bg"/>
    </LinearLayout>



    <FrameLayout
        android:layout_width="match_parent"
        android:id="@+id/framelayout_txxj"
        android:layout_height="0dp"
        android:layout_weight="1">
    </FrameLayout>
</LinearLayout>